<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmadstudios.sportimer.MainActivity">

    <EditText
        android:id="@+id/numberApproachesEditText"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:hint="@string/number_approaches_edit_text_hint"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/approachTimerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/zeros_of_timer"
        android:inputType="time"
        android:maxLength="8"
        app:layout_constraintLeft_toLeftOf="@+id/numberApproachesEditText"
        app:layout_constraintTop_toBottomOf="@+id/numberApproachesEditText"/>

    <EditText
        android:id="@+id/restTimerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/zeros_of_timer"
        android:inputType="time"
        android:maxLength="8"
        app:layout_constraintRight_toRightOf="@+id/numberApproachesEditText"
        app:layout_constraintTop_toBottomOf="@+id/numberApproachesEditText" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:onClick="onClick"
        android:text="@string/start_button_text"
        app:layout_constraintLeft_toLeftOf="@+id/numberApproachesEditText"
        app:layout_constraintRight_toRightOf="@+id/numberApproachesEditText"
        app:layout_constraintTop_toBottomOf="@+id/numberApproachesEditText"/>

</android.support.constraint.ConstraintLayout>
